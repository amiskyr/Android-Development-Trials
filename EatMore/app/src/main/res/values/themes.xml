<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EatMore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.EatMore.Launcher">
        <!-- Whether to run the app in full screen or window mode -->
        <item name="android:windowFullscreen">false</item>
        <!-- Setting the background for the splash screen -->
        <item name="android:windowBackground">@drawable/launcher</item>
        <!-- Setting top status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Setting bottom navigation bar color -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>