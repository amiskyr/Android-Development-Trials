<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardFoodItem"
    android:layout_width="165dp"
    android:layout_height="205dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:id="@+id/llBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/launcher_image">

        <ImageView
            android:id="@+id/imgFoodItemThumbnail"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/pizza_1"/>

        <TextView
            android:id="@+id/txtFoodItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pizza 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
            <!--android:layout_marginLeft="15dp"-->

        <RatingBar
            android:id="@+id/rtbFoodItemRating"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:rating="4.5"
            android:progressTint="@color/yellow"
            android:secondaryProgressTint="@color/yellow" />
            <!--android:layout_marginLeft="15dp"-->

        <TextView
            android:id="@+id/txtFoodItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="â‚¹ 100"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
            <!--android:layout_marginLeft="15dp"-->

    </LinearLayout>

</androidx.cardview.widget.CardView>