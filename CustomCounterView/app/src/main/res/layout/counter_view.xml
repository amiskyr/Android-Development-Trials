<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:id="@+id/pgb_progressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/CounterViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/pgb_progressBar"
        app:layout_constraintEnd_toEndOf="@+id/pgb_progressBar"
        app:layout_constraintStart_toStartOf="@+id/pgb_progressBar"
        app:layout_constraintTop_toTopOf="@+id/pgb_progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>